<Page x:Class="text_quest.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:text_quest"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">


    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Height="450" Width="900">
        <Button Click="Button_Click" Content="Button" Background="BlueViolet" Foreground="White" FontSize="25">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Height" Value="50"/>
                    <Setter Property="Width" Value="100"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Page>
