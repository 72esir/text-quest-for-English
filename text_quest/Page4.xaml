<Page x:Class="text_quest.Page4"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:text_quest"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page4">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid>
            <Border BorderBrush="Black" BorderThickness="1" Background="#FF87CEEB" CornerRadius="10" Width="540" Height="450"/>
        </Grid>
        <StackPanel>
            <Grid>
                <TextBox x:Name="resultTxt" Height="280" Width="500" Margin="18" Background="AliceBlue" FontSize="15" Padding="25" TextWrapping="WrapWithOverflow" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
                <Border BorderBrush="Black" BorderThickness="1" Height="280" Width="500" Margin="15" />
            </Grid>
            <Button Content="Попробовать еще раз" Width="500" Margin="5" Click="Restart"/>
            <Button Content="Закрыть приложение" Width="500" Margin="5" Click="Close"/>
            <Button Content="Авторы" Width="500" Margin="5" Click="Us"/>
        </StackPanel>
    </Grid>
</Page>
